{
	"name"       : "donatj/simplecalendar",
	"type"       : "library",
	"description": "A light, easy to use calendar rendering library",
	"keywords"   : ["calendar"],
	"homepage"   : "https://donatstudios.com/SimpleCalendar",
	"license"    : "MIT",
	"require"    : {
		"php": ">=7.2",
		"ext-calendar": "*"
	},
	"require-dev": {
		"ext-dom": "*",
		"corpus/coding-standard": "^0.8.0",
		"donatj/drop": "^1.1",
		"friendsofphp/php-cs-fixer": "^3.37",
		"phpstan/phpstan": "^1.10",
		"phpunit/phpunit": "*",
		"squizlabs/php_codesniffer": "^3.7"
	},
	"authors"    : [
		{
			"name"    : "Jesse G. Donat",
			"email"   : "donatj@gmail.com",
			"homepage": "https://donatstudios.com",
			"role"    : "Developer"
		}
	],
	"autoload"   : {
		"psr-4": {
			"donatj\\": "src/"
		}
	},
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
